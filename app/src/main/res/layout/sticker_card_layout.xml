<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_info_sticker">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Betakkuma"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sticker_pack_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3MB"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:id="@+id/sticker_pack_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/top_info_sticker"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/sticker_icon_1"
                android:contentDescription="@string/sticker_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/sticker_icon_2"
                android:contentDescription="@string/sticker_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/sticker_icon_3"
                android:contentDescription="@string/sticker_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/sticker_icon_4"
                android:contentDescription="@string/sticker_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/sticker_icon_5"
                android:contentDescription="@string/sticker_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sticker_download_state"
                android:contentDescription="@string/sticker_icon"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>